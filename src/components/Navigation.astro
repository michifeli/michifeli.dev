<header class="site-header" data-open="false">
  <nav>
    <div class="nav-inner">
      <div class="brand">
        <a href="/" class="muted">₍^. .^₎⟆</a>
      </div>

      <div class="nav-links" id="main-nav">
        <a href="/">me</a>
        <a href="/projects">proyectos</a>
        <a href="/blog">blog</a>
      </div>

      <div class="nav-end">
        <a
          class="source-btn"
          href="https://github.com/michifeli/website "
          target="_blank"
          aria-label="Source code"
          title="Source code"
        >
          <svg
            class="icon"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            aria-hidden="true"
          >
            <path
              d="M12 .5C5.73.5.5 5.73.5 12c0 5.08 3.29 9.39 7.86 10.91.57.1.78-.25.78-.55 0-.27-.01-1-.02-1.96-3.2.7-3.88-1.54-3.88-1.54-.52-1.32-1.28-1.67-1.28-1.67-1.05-.72.08-.71.08-.71 1.16.08 1.77 1.19 1.77 1.19 1.03 1.76 2.7 1.25 3.36.95.1-.74.4-1.25.73-1.54-2.56-.29-5.26-1.28-5.26-5.69 0-1.26.45-2.29 1.18-3.1-.12-.29-.51-1.46.11-3.05 0 0 .96-.31 3.15 1.18a10.95 10.95 0 0 1 2.87-.39c.98.01 1.97.13 2.87.39 2.19-1.49 3.15-1.18 3.15-1.18.62 1.59.24 2.76.12 3.05.74.81 1.19 1.84 1.19 3.1 0 4.42-2.71 5.39-5.29 5.67.41.35.78 1.04.78 2.1 0 1.52-.01 2.75-.01 3.12 0 .3.2.65.79.54C20.71 21.39 24 17.08 24 12c0-6.27-5.23-11.5-12-11.5z"
            ></path>
          </svg>
          <span>web source</span>
        </a>
      </div>

      <!-- hamburger toggle (mobile only) -->
      <button
        class="nav-toggle"
        aria-expanded="false"
        aria-controls="main-nav"
        aria-label="Abrir menú"
      >
        <svg
          class="hamburger"
          viewBox="0 0 24 24"
          width="20"
          height="20"
          aria-hidden="true"
          ><path fill="currentColor" d="M3 6h18v2H3zM3 11h18v2H3zM3 16h18v2H3z"
          ></path></svg
        >
        <svg
          class="close"
          viewBox="0 0 24 24"
          width="20"
          height="20"
          aria-hidden="true"
          style="display:none"
          ><path
            fill="currentColor"
            d="M18.3 5.71L12 12l6.3 6.29-1.41 1.42L10.59 13.4 4.29 19.71 2.88 18.29 9.18 12 2.88 5.71 4.29 4.29 10.59 10.6 16.88 4.29z"
          ></path></svg
        >
      </button>
      <script>
        (function () {
          /** @type {HTMLElement | null} */
          const header = /** @type {HTMLElement | null} */ (
            document.querySelector(".site-header")
          );
          if (!header) return;

          /** @type {HTMLElement | null} */
          const btn = /** @type {HTMLElement | null} */ (
            header.querySelector(".nav-toggle")
          );
          if (!btn) return;

          btn.addEventListener("click", () => {
            const open = header.getAttribute("data-open") === "true";
            header.setAttribute("data-open", (!open).toString());
            btn.setAttribute("aria-expanded", (!open).toString());

            const ham = btn.querySelector(".hamburger");
            const close = btn.querySelector(".close");

            if (ham instanceof HTMLElement || ham instanceof SVGElement) {
              ham.style.display = !open ? "none" : "inline";
            }
            if (close instanceof HTMLElement || close instanceof SVGElement) {
              close.style.display = !open ? "inline" : "none";
            }
          });
        })();
      </script>
    </div>
  </nav>
</header>
